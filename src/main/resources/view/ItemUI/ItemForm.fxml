<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.itemController.ItemFormController">

    <children>

        <!-- Header -->
        <Label layoutX="300.0" layoutY="20.0" text="Thogakade Items" textFill="#1a10ea">
            <font>
                <Font name="Arial Rounded MT Bold" size="32.0" />
            </font>
        </Label>

        <!-- Left side form -->
        <VBox layoutX="20.0" layoutY="90.0" prefWidth="330.0" spacing="20.0">

            <HBox spacing="10.0">
                <Label text="Discription :" textFill="#0d0d0d">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                </Label>
                <JFXTextField fx:id="txtDiscription" focusColor="#0e3fd1" promptText="Enter description" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Pack Size:" textFill="#0d0d0d">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                </Label>
                <JFXTextField fx:id="txtPackSizeNumber" promptText="Number" />
                <ComboBox fx:id="comPackSizeUnit" prefHeight="26.0" prefWidth="70.0" promptText="Unit" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Unit Price:" textFill="#0d0d0d">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                </Label>
                <JFXTextField fx:id="txtUnitPrice" promptText="Enter price" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Qty Onhand:" textFill="#0d0d0d">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                </Label>
                <JFXTextField fx:id="txtQtyOnhand" promptText="Enter qty" />
            </HBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
                <JFXButton fx:id="btnAdd" buttonType="RAISED" onAction="#btnAddOnAction" ripplerFill="#e10101" style="-fx-background-color:#2196F3;" text="Add" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>
                <JFXButton fx:id="btnUpdate" buttonType="RAISED" onAction="#btnUpdateOnAction" ripplerFill="#e10101" style="-fx-background-color:#4CAF50;" text="Update" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>
            </HBox>

            <HBox alignment="CENTER" spacing="15.0">
                <JFXButton fx:id="btnDelete" buttonType="RAISED" onAction="#btnDeleteOnAction" ripplerFill="#e10101" style="-fx-background-color:#f44336;" text="Delete" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>
                <JFXButton fx:id="btnClear" buttonType="RAISED" onAction="#btnClearOnAction" ripplerFill="#e10101" style="-fx-background-color:#9C27B0;" text="Clear" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>
            </HBox>

        </VBox>

        <!-- Right side table -->
        <TableView fx:id="tblItem" layoutX="370.0" layoutY="90.0" prefHeight="490.0" prefWidth="500.0" style="-fx-background-color: #fafafa; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-background-radius: 8;">
            <columns>
                <TableColumn fx:id="colItemCode" prefWidth="100.0" text="Item Code" />
                <TableColumn fx:id="colDiscription" prefWidth="120.0" text="Discription" />
                <TableColumn fx:id="colPackSize" prefWidth="100.0" text="Pack Size" />
                <TableColumn fx:id="colUnitPrice" prefWidth="100.0" text="Unit Price" />
                <TableColumn fx:id="colQtyOnHand" prefWidth="100.0" text="Qty Onhand" />
            </columns>
        </TableView>

    </children>
</AnchorPane>
