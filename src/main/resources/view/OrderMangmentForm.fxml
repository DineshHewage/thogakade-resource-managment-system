<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.orderManagmentController.OrderMangmentFormController">

    <children>

        <!-- Logo + Title -->
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" spacing="20.0">


            <Label text="ThogaKade - Orders" textFill="#1a10ea">
                <font>
                    <Font name="Arial Rounded MT Bold" size="32.0" />
                </font>
            </Label>
        </HBox>

        <!-- Left side form -->
        <VBox layoutX="20.0" layoutY="100.0" prefWidth="330.0" spacing="20.0">

            <HBox spacing="10.0">
                <Label text="Order ID:" textFill="#0d0d0d">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                </Label>
                <JFXTextField fx:id="txtOrderID" promptText="Auto-generated" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Order Date:" textFill="#0d0d0d">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                </Label>
                <JFXTextField fx:id="txtOrderDate" editable="false" promptText="Auto date" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Customer ID:" textFill="#0d0d0d">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                </Label>
<!--                <ComboBox fx:id="cmbCustID" prefWidth="180.0" promptText="Select Customer" />-->
                <JFXTextField fx:id="txtCustID" editable="false" prefHeight="26.0" prefWidth="148.0" promptText="Enter existing Customer Id" />
            </HBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
                <JFXButton fx:id="btnPlaceOrder" buttonType="RAISED" onAction="#btnPlaceOrderOnAction" style="-fx-background-color:#2196F3;" text="Place Order" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnUpdate" buttonType="RAISED" onAction="#btnUpdateOnAction" style="-fx-background-color:#4CAF50;" text="Update" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>
            </HBox>

            <HBox alignment="CENTER" spacing="15.0">
                <JFXButton fx:id="btnDelete" buttonType="RAISED" onAction="#btnDeleteOnAction" style="-fx-background-color:#f44336;" text="Delete" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnClear" buttonType="RAISED" onAction="#btnClearOnAction" style="-fx-background-color:#9C27B0;" text="Clear" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnSearch" buttonType="RAISED" onAction="#btnSearchOnAction" style="-fx-background-color:#FF9800;" text="Search" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>
            </HBox>

        </VBox>

        <!-- Right side table -->
        <TableView fx:id="tblOrders" layoutX="370.0" layoutY="100.0" prefHeight="450.0" prefWidth="500.0" style="-fx-background-color: #fafafa; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-background-radius: 8;">
            <columns>
                <TableColumn fx:id="colOrderID" prefWidth="150.0" text="Order ID" />
                <TableColumn fx:id="colOrderDate" prefWidth="150.0" text="Order Date" />
                <TableColumn fx:id="colCustID" prefWidth="200.0" text="Customer ID" />
            </columns>
        </TableView>

    </children>
</AnchorPane>
